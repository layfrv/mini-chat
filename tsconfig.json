{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ],
  "include": [
    "./src/**/*",
    "./globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}